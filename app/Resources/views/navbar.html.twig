{#<nav class="navbar navbar-default navbar-static-top">#}
<nav class="navbar navbar-inverse navbar-fixed-top" id="navbar-top">
    <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#collapsedHeaderNavbar" aria-expanded="false">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="{{ path('homepage') }}"><i class="fa fa-home"></i> {{ 'domain.name' | trans({}, 'domain') }}</a>
        </div>
        <div id="navbar-relative">
            {% block navbar %}
            {% set current_url = app.request.attributes.get('_route') %}
            <ul class="nav navbar-nav">
                <li role="presentation" {{ current_url == path('homepage') ? 'class="active"' : ''}}>
                    <a href="{{ path('homepage') }}" aria-controls="homepage">
                        <i class="fa fa-home"></i> {{ 'menu.home' | trans({}, 'navigation') }}
                    </a>
                </li>
                <li role="presentation" {{ current_url == path('artist_index') ? 'class="active"' : ''}}>
                    <a href="{{ path('artist_index') }}" aria-controls="{{ 'domain.artists' | trans({}, 'domain') }}">
                        {{ 'menu.artists' | trans({}, 'navigation') }}
                    </a>
                </li>
                <li role="presentation" {{ current_url == path('event_index') ? 'class="active"' : ''}}>
                    <a href="{{ path('event_index') }}" aria-controls="{{ 'domain.events' | trans({}, 'domain') }}">
                        {{ 'menu.events' | trans({}, 'navigation') }}
                    </a>
                </li>
                <li role="presentation" {{ current_url == path('address_index') ? 'class="active"' : ''}}>
                    <a href="{{ path('address_index') }}" aria-controls="{{ 'domain.addresses' | trans({}, 'domain') }}">
                        {{ 'menu.addresses' | trans({}, 'navigation') }}
                    </a>
                </li>
            </ul>
            {% endblock %}
        </div>
        <div class="collapse navbar-collapse" id="collapsedHeaderNavbar">
            <ul class="nav navbar-nav navbar-right">

                {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}

                    <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                        <i class="fa fa-user"></i>
                        {{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }} <span class="caret"></span>
                    </a>
                    </li>
                    <ul class="dropdown-menu">
                        <li><a href="#">Inbox <span class="badge">42</span></a></li>
                        <li><a href="#">Profil</a></li>
                        <li role="separator" class="divider"></li>
                        <li><a href="{{ path('fos_user_security_logout') }}">{{ 'layout.logout'|trans({}, 'FOSUserBundle') }}</a></li>
                    </ul>
                {% else %}
                    <li class="dropdown">
                    <a href="{{ path('fos_user_registration_register') }}"><i class="fa fa-user-plus"></i> {{ 'layout.register'|trans({}, 'FOSUserBundle') }}</a>
                    </li>
                    <li class="dropdown">
                    <a href="{{ path('fos_user_security_login') }}"><i class="fa fa-sign-in"></i> {{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a>
                    </li>
                {% endif %}
            </ul>
        </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
</nav>